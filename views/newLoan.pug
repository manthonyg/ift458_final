doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://fonts.googleapis.com/css?family=Oswald:300,400,400i,700' rel='stylesheet')
  link(rel='stylesheet' href='/css/style.css')
  link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
  title  New Loan
main.main
  .card-container
    .card
      .card__details
        h4.card__sub-heading New Loan 
        p.card__text
        if error
          each e, index in error
            p.card__text
              | #{e}
          | Please enter the following Details
        .card__data
          form(method='POST' enctype='application/x-www-form-urlencoded' action='/servlet/loans/loan')
            br
            label(for='loanName') Loan Name
            input#loanName(type='text' name='loanName')
            br
            br
            label(for='loanDescription') Loan Description
            input#loanDescription(type='text' name='loanDescription')
            br
            br
            label(for='loanAddress') Loan Address:
            input#loanAddress(type='text' name='loanAddress')
            br
            br
            label(for='loanTermYears') Loan Term:
            input#loanTermYears(type='text' name='loanTermYears')
            br
            br
            label(for='loanInterestRate') Loan Interest:
            input#loanInterestRate(type='text' name='loanInterestRate')
            br
            br
            label(for='loanMonthlyPayment') Loan Monthly Payment:
            input#loanMonthlyPayment(type='text' name='loanMonthlyPayment')
            br
            br
            label(for='loanType') Loan Type:
            input#loanType(type='text' name='loanType')
            br
            br
            label(for='loanAmount') Loan Amount:
            input#loanAmount(type='text' name='loanAmount')
            br
            br
            input.card__sub-heading(type='submit' value='Submit')
