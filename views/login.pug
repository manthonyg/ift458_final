doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700' rel='stylesheet')
  link(rel='stylesheet' href='/css/style.css')
  link(rel='shortcut icon' type='image/png' href='img/favicon.png')
  title Login | Enter User Credentials
// <section class="overview">
main.main
  .card-container
    .card
      .card__header
      .card__details
        h4.card__sub-heading Login 
        p.card__text
          | No account?
        a(href='/signup')
          button.card__sub-heading Signup
        if error
          each e, index in error
            p.card__text
              | #{e}
        p.card__text
          | Please enter the following Details
        .card__data
          form(method="POST" entype='application/x-www-form-urlencoded' action='/servlet/auth/login')
            label(for='email') Email:
            input#email(type='text' name='email')
            br
            br
            label(for='fname') Password:
            input#password(type='password' name='password')
            br
            br
            input.card__sub-heading(type='submit' value='Log In')
